<h1>Login</h1>

<form class="col-sm-3"{{on "submit" this.authenticate}}>
  <div class="mb-3">
  <label for="identification" class="form-label">Login</label>
  <Input  class="form-control"
  @id="identification" 
  @type="text" 
  @placeholder="Enter Login" @value={{this.identification}} />
</div>
<div class="mb-3">
  <label for="password" class="form-label">Password</label>
  <Input @id="password"
  class="form-control" 
  @type="password" @placeholder="Enter Password" @value={{this.password}} />
</div>
<div class="col-3">
  <button type="submit" class="btn btn-success btn-block">Login</button>
</div>
  {{#if this.errorMessage}}
    <p>{{this.errorMessage}}</p>
  {{/if}}
</form>